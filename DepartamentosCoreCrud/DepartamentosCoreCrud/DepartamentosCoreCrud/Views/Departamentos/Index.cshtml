@model List<Departamento>

<h1>Lista Departamentos</h1>

<table class=" table table">
    <thead>
        <tr>
            <th>ID Departamento</th>
            <th>Nombre</th>
            <th>Localidad</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Departamento dept in Model)
            {
        <tr>
            <td>@dept.Numero</td>
            <td>@dept.Nombre</td>
            <td>@dept.Localidad</td>
            <td>
                <a class=" btn btn-success" asp-controller="Departamentos" asp-action="Details" asp-route-iddepartamento="@dept.Numero">Detalles</a>
            </td>
            <td>
                <a class=" btn btn-primary" asp-controller="Departamentos" asp-action="Edit" asp-route-iddepartamento="@dept.Numero">Modificar</a>
            </td>
            <td>
                <a class=" btn btn-danger" asp-controller="Departamentos" asp-action="Delete" asp-route-iddepartamento="@dept.Numero">Eliminar</a>
            </td>
        </tr>
            }
    </tbody>
</table>
