@model Empleado
@{
    List < Empleado > lista = ViewBag.lista as List<Empleado>;
}

<h1>Empleados</h1>
<form method="post">
    <label>Selecciona el empleado</label>
    <select name="idempleado" class="form-control">
        @foreach(Empleado emp in lista)
            {
        <option value="@emp.IdEmpleado">@emp.Apellido</option>
            }
    </select>
    <button class="btn btn-success">Buscar</button>
</form>

<hr />


@if(Model != null)
            {
                <h1>@Model.Apellido</h1>
                <h2>@Model.Oficio</h2>
            }