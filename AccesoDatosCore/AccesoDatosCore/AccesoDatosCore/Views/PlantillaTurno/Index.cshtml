@model List<Plantilla>
<h1>Buscar empleados por su turno</h1>

<form method="post">
    <label>Turno</label>
    <input type="text" name="valor" class="form-control" required />
    <button class="btn btn-info" type="submit">Comprobar</button>
</form>


@if (Model != null)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <td>Apellido</td>
                <td>Salario</td>
            </tr>
        </thead>
        <tbody>
            @foreach (Plantilla plant in Model)
            {
                <tr>
                    <td>@plant.Apellido</td>
                    <td>@plant.Turno</td>
                </tr>
            }
        </tbody>
    </table>
}