@model List<Empleado>
@{ 
    List<String> oficios = ViewBag.Oficios as List<String>;
}
<h1>Oficio de los empleados</h1>

<form method="post">
    <label>Seleccione un oficio</label>
    <select name="oficio" class="form-control">
        @foreach(String oficio in oficios)
            {
                <option value="@oficio">@oficio</option>
            }
    </select>
    <button class="btn btn-success">
        Mostrar Empleados
    </button>
</form>

@if(Model != null)
{
    <table class="table table-success">
        <thead>
            <tr>
                <td>Apellido</td>
                <td>Oficio</td>
            </tr>
        </thead>
        <tbody>
                @foreach (Empleado emp in Model)
                {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                </tr>
                    }
            </tbody>
    </table>
}


