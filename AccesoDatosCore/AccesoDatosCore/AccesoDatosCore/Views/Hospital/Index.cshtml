@model List<Hospital>
<h1>Hospital</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <td></td>
            <td></td>
            <td>Nombre</td>
            <td>Direccion</td>
            <td>Telefono</td>
            <td>Numero de camas</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Hospital hosp in Model)
        {
            <tr>
                <td><a class="btn btn-info" asp-controller="HospitalPlantilla" asp-action="Index" asp-route-code="@hosp.Hospital_cod">Ver Plantilla</a></td>
                <td><a class="btn btn-info" asp-controller="HospitalDoctores" asp-action="Index" asp-route-code="@hosp.Hospital_cod">Ver Doctores</a></td>
                <th>@hosp.Nombre</th>
                <th>@hosp.Direccion</th>
                <th>@hosp.Telefono</th>
                <th>@hosp.Num_cama</th>
            </tr>
        }
    </tbody>
</table>

<hr />
<a class="btn btn-danger" asp-area="" asp-controller="Hospital" asp-action="Menu">Menu Hospitales</a>